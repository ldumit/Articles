{      
  "ConnectionStrings": {
    "Database": "redis://localhost:6379"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  //todo - do I need this JwtOptions in the services(except for Auth service)
  "JwtOptions": {
    "Issuer": "Articles",
    "Audience": "Articles",
    "Secret": "this-is-a-very-strong-secret-123!"
  },
  "RabbitMqOptions": {
    "Host": "amqp://articles-mq:5672",
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/"
  },
  "GrpcServicesOptions": {
    // if needed the Retry Policy can be placed inside each service 
    "Retry": {
      "Count1": 3,
      "InitialDelayMs": 2
    },
    "Services": {
      "Person": {
        "Url": "https://auth-api:8081",
        "EnableRetry": true
      }
    }
  }
}
